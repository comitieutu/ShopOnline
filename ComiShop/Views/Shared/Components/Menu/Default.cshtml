@model IList<Category>
@{
    var categorys = Model.Where(c => c.Deleted == false).ToList();
}

<li class="dropdown">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">Văn học<b class="caret"></b></a>
	<ul class="dropdown-menu multi-column columns-2">
		<div class="row">
			<div class="col-sm-9  multi-gd-img">
                <ul class="multi-column-dropdown">
                    @foreach (var item in categorys.Where(c => c.Parent == 1))
                    {
                        <li><a asp-controller="Product" asp-action="ProductList" asp-route-id="@item.Id">@item.CategoryName</a></li>
                    }
                </ul>
			</div>
			<div class="clearfix"></div>
		</div>
	</ul>
</li>
