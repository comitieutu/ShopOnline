@model ContactViewModel
@{
    ViewBag.Title = "Contact";
}
@section scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<body>
    <!--content-->
    <div class="content">
        <!--contact-->
        <div class="mail-w3ls">
            <div class="container">
                <h2 class="tittle">Mail Us</h2>
                <div class="mail-grids">
                    <div class="mail-top">
                        <div class="col-md-4 mail-grid">
                            <i class="glyphicon glyphicon-map-marker" aria-hidden="true"></i>
                            <h5>Address</h5>
                            <p>212 Nguyễn Đình Chiểu, Phường 6, Quận 3, Hồ Chí Minh, Việt Nam</p>
                        </div>
                        <div class="col-md-4 mail-grid">
                            <i class="glyphicon glyphicon-earphone" aria-hidden="true"></i>
                            <h5>Phone</h5>
                            <p>Telephone:  +84 1800 1779</p>
                        </div>
                        <div class="col-md-4 mail-grid">
                            <i class="glyphicon glyphicon-envelope" aria-hidden="true"></i>
                            <h5>E-mail</h5>
                            <p>E-mail:<a href="mailto:example@mail.com"> example@mail.com</a></p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="map-w3">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1385.7268129600345!2d106.68956358998604!3d10.778548214220612!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f3a9d97282b%3A0x45e74ca0fc0300dc!2zSOG7hyB0aOG7kW5nIMSQw6BvIHThuqFvIEzhuq1wIHRyw6xuaCB2acOqbiBRdeG7kWMgdOG6vyBBcHRlY2g!5e0!3m2!1svi!2s!4v1542736572026" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <div class="mail-bottom">
                        <h4>Get In Touch With Us</h4>
                        <form asp-controller="Book" asp-action="Contact" method="post">
                            <input type="text" asp-for="Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}" required="">                            
                            <input type="email" asp-for="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required="">                            
                            <input type="text" asp-for="Phone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Telephone';}" required="">
                            <textarea asp-for="Mesage" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message...';}" required="">Message...</textarea>
                            <input type="submit" value="Submit">
                            <input type="reset" value="Clear">
                            <div>@ViewBag.UserMessage</div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--contact-->
    </div>
    <!--content-->
</body>