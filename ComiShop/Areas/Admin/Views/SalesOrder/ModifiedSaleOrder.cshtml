@model ModifiedSaleOrderViewModel
@{
    ViewData["Title"] = "ModifiedSaleOrder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="SalesOrder" asp-action="ModifiedSaleOrder" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Id</label>
                        <input asp-for="Id" class="form-control" disabled />
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="ShippedDate" class="control-label">Ship date</label>
                        <input asp-for="ShippedDate" class="form-control" />
                        <span asp-validation-for="ShippedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Payment" class="control-label">Payment</label>
                        <input asp-for="Payment" class="form-control" />
                        <span asp-validation-for="Payment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OrderStatus" class="control-label">Order status</label>
                        <input asp-for="OrderStatus" class="form-control" />
                        <span asp-validation-for="OrderStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ShipperId" class="control-label">Shipper</label>
                        <select asp-for="ShipperId" class="form-control" asp-items="@(new SelectList(ViewBag.Shipper,"Id","ContactName"))">
                            <option>Please Select One</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

