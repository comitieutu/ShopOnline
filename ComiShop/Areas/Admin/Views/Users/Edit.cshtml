@model EditUserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label">Id</label>
                        <input asp-for="Id" class="form-control" disabled />
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Admin" class="control-label">Set role admin?</label>
                        <input asp-for="Admin" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>


